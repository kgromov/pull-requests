<%- include("partials/header") -%>

    <div class="box" id="heading">
        <h1>Sprints</h1>        
    </div>

    <div class="box">
        <% sprints.forEach(sprint => { %>
            <div class="item">
                <div class="item-name"><%= sprint.name %></div>
                <div class="item-name"><%= sprint.goal %></div>
                <div class="actions">
                    <a class="btn btn-outline-primary btn-lg" href="/sprints/<%= sprint.number %>">Details</a>
                </div>                
            </div>           
        <% }) %>

        <form class="item" action="/sprints" method="post">
            <input type="hidden" name="sprintNumber" value="<%= nextSprintNumber %>">
            <input type="text" name="sprintName" placeholder="New sprint" autocomplete="off">
            <button type="submit" class="btn-small">+</button>
        </form>
    </div>

<%- include("partials/footer") -%>
